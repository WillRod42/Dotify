<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PrimaryActivity"
    android:background="@color/mainBackground">

    <FrameLayout
        android:id="@+id/fragContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/llMiniPlayer"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <LinearLayout
        android:id="@+id/llMiniPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/miniPlayerBackground"
        android:padding="@dimen/miniPlayerPadding"
        android:foreground="?selectableItemBackground">

        <TextView
            android:id="@+id/tvMiniPlayerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="TESTSETSETSETSTSETSETSETSETTESTSETESTSETSETSETSETSETSETSETSETSETSET"
            android:layout_weight="1"
            android:singleLine="true"
            style="@style/miniPlayerText"/>

        <Button
            android:id="@+id/btnShuffle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnShuffleText"
            android:background="@color/btnShuffle"
            android:textColor="@color/text"
            android:foreground="?selectableItemBackground"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>